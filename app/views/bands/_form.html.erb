<h1><%= @action %> Band</h1>
<%= form_for @band do |f| %>
  <div class="row">
    <div class="col-sm-12">
      <%= f.label :name, 'Band Name' %>
      <%= f.text_field :name %>
      <%= @name_error %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <%= f.label :members, 'Invite Members' %>
      <%= f.text_field :members %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6 col-md-3">
      <%= f.submit @submit, class: 'btn btn-secondary' %>
    </div>
    <div class="col-sm-6 col-md-3 offset-md-1">
      <%= link_to "Cancel", :back, class: 'btn btn-secondary' %>
    </div>
  </div>
<% end %>
